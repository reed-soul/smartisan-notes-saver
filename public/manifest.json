{
  "manifest_version": 2,
  "name": "Smartisan Notes Exporter",
  "version": "1.0",
  "description": "Export Smartisan Notes to Markdown files",
  "permissions": [
    "*://note.smartisan.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://note.smartisan.com/*"],
      "js": [
        "lib/jszip.min.js",
        "lib/FileSaver.min.js",
        "src/content.js"
      ],
      "css": ["public/contentScript.css"]
    }
  ],
  "icons": {
    "48": "public/icons/icon_48.png",
    "128": "public/icons/icon_128.png"
  }
}
